<form id="form_update_user_profile">
    <input name="id" type="text" value="<%= user._id %>" hidden>
    <p>
        <label>Usuario del sistema</label>
        <input name = "username" type="text" class="form-control" value="<%= user.username %>" disabled>
    </p>
    <p>
        <label>Contraseña</label><br>
        <input type="password" class="form-control" name="password" placeholder="Contraseña">
    </p>
    <p>
        <label>Nombre(s)</label>
        <input name="name" type="text" class="form-control" value="<%= user.name %>" required>
    </p>

    <p><label>Apellido(s)</label>
        <input name="lastname" type="text" class="form-control" value="<%= user.lastname%>" required>
    </p>

    <p><label>E-mail</label>
        <input name="email" type="email" class="form-control" value="<%= user.email %>" placeholder="E-mail">
    </p>
    <p>
        <label>Dirección</label>
        <input class="form-control" type="text" value="<%= user.address%>" name="address">
    </p>
    <hr>
    <h4>Datos de Publicador</h4>
    <p>
        <label title='El nombre de la organización o departamento responsable de publicar estos datos.'>Nombre</label>
        <input name="publisherName" class="form-control" value="<%= user.publisherName %>" >
    </p>
    <p>
        <label title='El esquema que contiene los identificadores únicos utilizados para identificar cada elemento.'>Esquema</label>
        <input name="publisherScheme" class="form-control" value="<%= user.publisherScheme %>">
    </p>
    <p>
        <label title='El identificador único para esta entidad bajo el esquema de identificación dado. Observe el uso de "uid" en lugar de "id".'>UID</label>
        <input name="publisherUid" class="form-control" value="<%= user.publisherUid %>">
    </p>
    <p>
        <label title='Una URI para identificar al publicador.'>URI</label>
        <input type="url" name="publisherUri" class="form-control" value="<%= user.publisherUri %>">
    </p>

    <button type="submit" class="btn btn-default">Actualizar</button>
</form>