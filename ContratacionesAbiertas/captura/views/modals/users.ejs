<%if (users.length === 0){%>
<div class="alert alert-warning">
    <p>No se han registrado usuarios adem√°s del administrador.</p>
</div>
<%} else {%>
<div class="list-group">
    <%for (var i=0; i< users.length;i++){%>
    <a href="#" class="list-group-item">
        <div class="row">
            <div class="col-md-10">
                <h4 class="list-group-item-heading">
                    <%=users[i].name%>
                    <%=users[i].lastname%>
                </h4>
                <p class="list-group-item-text">
                    <%=users[i].email%>
                </p>
            </div>
            <div class="col-md-2">
                <button class="btn btn-default" data-toggle="modal" data-action="edit_user" data-target="#genericModal"
                    data-user_id="<%= users[i].id%>"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></button>
                <button class="btn btn-danger" data-toggle="modal" data-action="delete_user" data-target="#genericModal"
                    data-user_id="<%= users[i].id%>"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
            </div>
        </div>
    </a>
    <%}%>
</div>
<%}%>